<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/msg_app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/msg_title_bar"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <ImageButton
            android:id="@+id/quit_msg_ac"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="0dp"
            android:background="@mipmap/navi_quit_b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/connect_tips"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            app:indicatorColor="@color/black_text"
            app:indicatorName="BallClipRotateMultipleIndicator" />

        <TextView
            android:id="@+id/other_msg_tips"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white_bg"
            android:background="@drawable/msg_tips_text_view"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/cos_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="聊天页面"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black_text"
            android:textSize="17sp"/>

        <ImageButton
            android:id="@+id/msg_show_f"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:background="@mipmap/msg_list_show" />
    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/gap_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black_line_light" />


</android.support.design.widget.AppBarLayout>
