<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar_item_with_line"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/load_tips"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text=" ▾可以导入私钥在这里"
            android:textColor="@color/tips_text_h"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/load_pri_key"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:hint="复制私钥串 或 扫私钥二维码"
            android:textSize="14sp"
            android:textAlignment="textStart"
            android:textColor="@color/black_text"
            android:background="@drawable/edit_bg" />

        <TextView
            android:id="@+id/load_tips_account"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text=" ▾当前私钥的账号"
            android:textSize="12sp"
            android:textColor="@color/tips_text_h"/>

        <EditText
            android:id="@+id/pri_key_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="2dp"
            android:hint="如果没有请填写"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/black_text"
            android:background="@drawable/edit_bg" />

        <Button
            android:id="@+id/save_pri_key"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:background="@drawable/btn_login_shape"
            android:text="更新为当前私钥"
            android:textColor="@color/white_bg"
            android:textSize="19sp" />


    </LinearLayout>
    </ScrollView>










</android.support.design.widget.CoordinatorLayout>
