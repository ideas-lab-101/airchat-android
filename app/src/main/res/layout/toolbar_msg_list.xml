<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/msgListToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:popupTheme="@style/AppTheme.PopupOverlay" >

        <TextView
            android:id="@+id/cos_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black_text"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/scan_f"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:visibility="gone"
            android:background="@mipmap/s_scan" />

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/connect_tips"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:visibility="gone"
            app:indicatorColor="@color/black_text"
            app:indicatorName="BallClipRotateMultipleIndicator" />

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/gap_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_line_light" />


</android.support.design.widget.AppBarLayout>
