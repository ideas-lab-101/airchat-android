<?xml version="1.0" encoding="utf-8"?>
<com.baoyz.widget.PullRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:scrollbars="vertical"
    app:refreshColor="@color/clear"
    app:refreshType="smartisan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sagacity_white"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:gravity="center|left">

                <LinearLayout
                    android:id="@+id/ll_profileBase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.android.crypt.chatapp.widget.RoundImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/default_head"
                        app:isCircle="false"
                        app:borderRadius="5dp" />

                    <LinearLayout
                        android:id="@+id/iv_username"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_profileName"
                            android:layout_width="match_parent"
                            android:layout_weight="0.8"
                            android:layout_height="25dp"
                            android:gravity="center|left"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/sagacity_blank"
                            android:text="@string/profile_name"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_qrCode"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/qr_code" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gap_view_1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="0dp"
                android:background="@color/light_gray_line"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_friend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="@color/sagacity_white"
                android:orientation="horizontal"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/s_search"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/sagacity_blank"
                    android:textSize="14sp"
                    android:text="添加好友"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/mm_submenu"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_scan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="@color/sagacity_white"
                android:orientation="horizontal"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/s_scan"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/sagacity_blank"
                    android:textSize="14sp"
                    android:text="扫一扫"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/mm_submenu"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gap_view_2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="0dp"
                android:background="@color/light_gray_line"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sec"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="@color/sagacity_white"
                android:orientation="horizontal"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/s_log"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/sagacity_blank"
                    android:textSize="14sp"
                    android:text="通讯秘钥"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/mm_submenu"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="@color/sagacity_white"
                android:orientation="horizontal"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/s_me"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/sagacity_blank"
                    android:textSize="14sp"
                    android:text="设置"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/mm_submenu"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/gap_view_3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="0dp"
                android:background="@color/light_gray_line"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="@color/sagacity_white"
                android:orientation="horizontal"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/s_image"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/sagacity_blank"
                    android:textSize="14sp"
                    android:text="分享"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/mm_submenu"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_help"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0dp"
                android:background="@color/sagacity_white"
                android:orientation="horizontal"
                android:gravity="center|left">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/s_help"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/sagacity_blank"
                    android:textSize="14sp"
                    android:text="帮助"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/mm_submenu"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</com.baoyz.widget.PullRefreshLayout>